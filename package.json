{
  "name": "prediction-market-scaffold",
  "version": "1.0.0",
  "description": "Full-stack Prediction Market Platform Scaffold",
  "private": true,
  "workspaces": [
    "www-react",
    "backend"
  ],
  "scripts": {
    "setup": "./setup.sh",
    "dev": "concurrently -n api,web,idx,ct-idx,oracle,sched -c blue,green,yellow,magenta,cyan,red \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:indexer\" \"npm run dev:indexer:continuous\" \"npm run dev:oracle:continuous\" \"npm run dev:scheduler\"",
    "dev:scheduler": "npm run scheduler --workspace=backend",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:frontend": "npm run dev --workspace=www-react",
    "dev:indexer": "npm run indexer:init --workspace=backend && npm run indexer --workspace=backend",
    "dev:indexer:continuous": "npm run indexer:continuous --workspace=backend",
    "dev:oracle:continuous": "npm run oracle:continuous --workspace=backend",
    "compile": "npx hardhat compile",
    "test": "npx hardhat test && npm run test --workspace=backend",
    "clean": "npx hardhat clean",
    "node": "npx hardhat node",
    "seed": "npx hardhat run scripts/seed-local.js --network localhost",
    "create-bulk": "npx hardhat run scripts/create-bulk-markets.js --network localhost",
    "sponsor-market": "tsx scripts/sponsor-market.ts",
    "deploy:localhost": "npx hardhat run scripts/deploy-v2.js --network localhost",
    "deploy:base-sepolia": "npx hardhat run scripts/deploy-v2.js --network baseSepolia",
    "deploy:base": "npx hardhat run scripts/deploy-v2.js --network base",
    "deploy:continuous:localhost": "npx hardhat run scripts/deploy-continuous.js --network localhost",
    "deploy:continuous:base-sepolia": "npx hardhat run scripts/deploy-continuous.js --network baseSepolia",
    "deploy:continuous:base": "npx hardhat run scripts/deploy-continuous.js --network base",
    "seed:continuous": "npx hardhat run scripts/seed-continuous.js --network localhost"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "@openzeppelin/contracts": "^4.9.0",
    "@openzeppelin/contracts-upgradeable": "^4.9.0",
    "@openzeppelin/hardhat-upgrades": "^1.28.0",
    "concurrently": "^9.2.1",
    "hardhat": "^2.17.1"
  },
  "dependencies": {
    "decimal.js": "^10.6.0",
    "dotenv": "^17.2.3"
  }
}
