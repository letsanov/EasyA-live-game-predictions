FROM node:20-alpine AS builder

WORKDIR /app

# Copy package files
COPY www-react/package*.json ./

# Install dependencies
RUN npm install

# Copy source
COPY www-react/ .

# Build
RUN npm run build

# Production stage
FROM nginx:alpine

COPY --from=builder /app/dist /usr/share/nginx/html
COPY www-react/nginx.games.conf /etc/nginx/conf.d/default.conf

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
